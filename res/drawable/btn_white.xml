<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#A8A9AD" />
            <stroke
                android:width="1dp"
                android:color="#7C7D80" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fefefe"
                android:endColor="#7C7D80"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#7C7D80" />
            <corners
                android:radius="8dp" />
            <padding
                android:left="5dp"
                android:top="10dp"
                android:right="5dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>